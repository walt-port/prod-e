{
  "family": "prod-e-task",
  "taskRoleArn": "arn:aws:iam::043309339649:role/ecs-task-role",
  "executionRoleArn": "arn:aws:iam::043309339649:role/ecs-task-execution-role",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "prod-e-container",
      "image": "043309339649.dkr.ecr.us-west-2.amazonaws.com/prod-e-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_HOST",
          "value": "postgres-instance.cnymcgs0e26q.us-west-2.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_NAME",
          "value": "appdb"
        },
        {
          "name": "DB_USER",
          "value": "dbadmin"
        },
        {
          "name": "DB_PASSWORD",
          "value": "ReallyStrongPass87$"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "METRICS_PREFIX",
          "value": "prod_e_"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prod-e-task",
          "awslogs-create-group": "true",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"const http = require('http'); const options = { hostname: 'localhost', port: 3000, path: '/health', timeout: 2000 }; const req = http.get(options, (res) => { process.exit(res.statusCode === 200 ? 0 : 1); }); req.on('error', () => { process.exit(1); });\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}
